<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="7dp">
    <RelativeLayout
        android:layout_marginTop="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/v1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/colorPrimary"
            android:background="@drawable/bg_acc_circle"/>
        <View
            android:id="@+id/v2"
            android:layout_centerInParent="true"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:backgroundTint="@color/white"
            android:background="@drawable/ic_acc_circle"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_marginLeft="6dp"
            android:padding="6dp"
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_title"
                android:layout_marginBottom="1dp"
                android:fontFamily="@font/f_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/t_dark"
                android:text="Uang Masuk"/>
            <TextView
                android:id="@+id/tv_keterangan"
                android:fontFamily="@font/f_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/t_grey"
                android:textSize="12sp"
                android:text="Nama ~ Kas Konsumsi"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right">
            <TextView
                android:id="@+id/tv_harga"
                android:fontFamily="@font/f_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/t_dark"
                android:text="Rp. 2000"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>